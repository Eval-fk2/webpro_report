<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= data.name %></title>
</head>
<body>
  <h2><%= data.name %>の詳細</h2>
  <table>
    <tr><th>項目</th><th>データ</th></tr>
    <tr><td>ID</td><td><%= data.id %></td></tr>
    <% for (const {propertyName, label} of db_properties ) { %>
      <tr><td><%= label %></td><td><%= data[propertyName] %></td></tr>
    <% }; %>
  </table>
  <a href="/db">一覧に戻る</a><br>
  <a href="/db_remove/<%= data.id%>">削除する</a><br>
  <a href="/db_edit/<%= data.id%>">編集する</a><br>
</body>
</html>